function createDashboard() {
    const name = document.getElementById('dashboard-name').value.trim();
    const description = document.getElementById('dashboard-desc').value.trim();
    
    if (!name) {
        showNotification('è¯·è¾“å…¥çœ‹æ¿åç§°', 'error');
        return;
    }
    
    dashboards.push({
        id: Date.now().toString(),
        name, description,
        cards: [],
        created: new Date().toISOString()
    });
    
    saveDashboards();
    hideCreateModal();
    renderDashboards();
    showNotification('çœ‹æ¿åˆ›å»ºæˆåŠŸï¼', 'success');
}

function deleteDashboard(dashboardId) {
    if (!confirm('ç¡®å®šåˆ é™¤æ­¤çœ‹æ¿ï¼Ÿ')) return;
    
    dashboards = dashboards.filter(d => d.id !== dashboardId);
    saveDashboards();
    renderDashboards();
    showNotification('çœ‹æ¿å·²åˆ é™¤', 'info');
